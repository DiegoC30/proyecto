<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="EncuestaAppPU" transaction-type="RESOURCE_LOCAL">
        <!-- Proveedor de persistencia -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Clases gestionadas -->
        <class>conn.mamartinez.encuentaapp.modelos.Curso</class>
        <class>conn.mamartinez.encuentaapp.modelos.Docente</class>
        <class>conn.mamartinez.encuentaapp.modelos.Leyenda</class>
        <class>conn.mamartinez.encuentaapp.modelos.Pregunta</class>
        <class>conn.mamartinez.encuentaapp.modelos.Respuesta</class>

        <!-- Configuración de conexión a la base de datos -->
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/encuestaapp"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="123"/>

            <!-- Configuración de Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>
