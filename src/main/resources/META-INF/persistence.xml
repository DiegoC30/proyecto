<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="EncuestaAppPU" transaction-type="JTA">
        <jta-data-source>java:/EncuestaAppDS</jta-data-source>
        <class>conn.mamartinez.encuentaapp.modelos.Respuesta</class>
        <class>conn.mamartinez.encuentaapp.modelos.Pregunta</class>
        <class>conn.mamartinez.encuentaapp.modelos.Leyenda</class>
        <class>conn.mamartinez.encuentaapp.modelos.Docente</class>
        <class>conn.mamartinez.encuentaapp.modelos.Curso</class>
        <properties>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
